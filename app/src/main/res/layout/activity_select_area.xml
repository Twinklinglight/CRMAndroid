<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.wtcrmandroid.view.custompricing.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_select_area_province"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_province"
            android:textColor="@color/color_title_bg"
            android:textColorHint="@color/color_gray_999"
            android:textSize="@dimen/text_size_18" />

        <RadioButton
            android:id="@+id/rb_select_area_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:button="@drawable/selector_right_arrow" />

        <TextView
            android:id="@+id/tv_select_area_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/select_city"
            android:textColor="@color/color_title_bg"
            android:textColorHint="@color/color_gray_999"
            android:textSize="@dimen/text_size_18" />

        <RadioButton
            android:id="@+id/rb_select_area_town"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:button="@drawable/selector_right_arrow" />

        <TextView
            android:id="@+id/tv_select_area_town"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/select_town"
            android:textColor="@color/color_title_bg"
            android:textColorHint="@color/color_gray_999"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_select_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"></android.support.v7.widget.RecyclerView>
</LinearLayout>
