<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_dayplan_addjob"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_xrz_add"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="@string/add_work"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/colorPrimary"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_dayplan_analysis"
        android:padding="10dp"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/analysis"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/colorIconText"/>

        <TextView
            android:id="@+id/tv_single"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/ic_grayright_arrow"
            android:textSize="@dimen/text_size_16"
            android:drawablePadding="5dp"
            android:textColor="@color/colorContext"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_dayplan_genjin"
        android:padding="10dp"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16"
            android:text="@string/genjin"
            android:textColor="@color/colorIconText"/>


        <TextView
            android:id="@+id/tv_major"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/ic_grayright_arrow"
            android:textSize="@dimen/text_size_16"
            android:drawablePadding="5dp"
            android:textColor="@color/colorContext"/>



    </RelativeLayout>

</LinearLayout>